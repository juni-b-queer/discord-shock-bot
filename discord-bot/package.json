{
    "name": "discord-bot",
    "version": "1.0.0",
    "description": "A modular Discord bot using TypeScript and discord.js",
    "main": "dist/bot.js",
    "type": "module",
    "scripts": {
        "start": "node dist/bot.js",
        "build": "bun build --target=bun ./src/index.ts --outfile=./dist/index.ts",
        "dev": "bun run src/bot.ts",
        "refresh-commands": "bun run src/scripts/deploy-commands.ts",
        "update-db": "npx drizzle-kit push",
        "format": "npx prettier . --write"
    },
    "dependencies": {
        "@types/bun": "^1.2.8",
        "discord.js": "^14.18.0",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.41.0",
        "mysql2": "^3.14.0"
    },
    "devDependencies": {
        "@types/node": "^20.4.1",
        "drizzle-kit": "^0.30.5",
        "prettier": "3.5.3",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2"
    }
}
